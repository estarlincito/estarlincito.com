{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "concurrency": "1",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "EDGEDB_INSTANCE",
        "EDGEDB_SECRET_KEY",
        "SECRET",
        "NODE_ENV",
        "ADMIN_TOKEN",
        "MAIL_PASSWORD",
        "MAIL_ADDRESS",
        "GITHUB_TOKEN"
      ]
    },
    "release": {
      "dependsOn": ["build"],
      "cache": false
    },

    "@repo/content#build": {
      "outputs": [".mdxlayer/**", "quotely/.quotes/**"]
    },
    "@repo/release#build": {
      "outputs": ["dist/**"]
    },

    "check-unused": {
      "dependsOn": ["^check-unused"],
      "cache": false
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}
